<Window x:Class="JobPortal.CandidateEditProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CandidateEditProfile" Height="450" Width="600" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            
            <Label HorizontalAlignment="Center" FontWeight="Bold" FontSize="15">Edit Details</Label>
            
            <StackPanel Margin="20 20 20 0">
                
                <Label>Age:</Label>
                <ComboBox Name="Age"></ComboBox>

                <Label>Experience:</Label>
                <ComboBox Name="Experience"></ComboBox>

                <Label>Gpa:</Label>
                <ComboBox Name="Gpa"></ComboBox>

                 
                <Button Width="40" Margin="0 150 0 0" Name="Save" Click="Save_Click">Save</Button>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
