<Window x:Class="JobPortal.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SignUp" Height="350" Width="600">
    <Grid>
        
        <StackPanel>
            
            <Label>SignUp As:</Label>
            <StackPanel Orientation="Horizontal">
                <RadioButton Name="Candidate" IsChecked="True">Candidate</RadioButton>
                <RadioButton Name="Employer" Margin="20 0 0 0">Employer</RadioButton>
            </StackPanel>

            
            <StackPanel Orientation="Horizontal" Margin=" 0 20 0 10">
                <Label Margin="0 0 30 0">UserName:</Label>
                <TextBox Name="UserName" TextChanged="CheckUserName" Width="120"></TextBox>
                <Label Name="UsernameError" Visibility="Hidden">User with the same username exists!</Label>
            </StackPanel>
            
            <StackPanel Orientation="Horizontal">
                <Label Margin="0 0 36 0">Password:</Label>
                <PasswordBox Name="Password" Width="120"></PasswordBox>
            </StackPanel>
            
            
            
            <Button Name="SignUpButton" Click="SignUpButton_Click" Margin="0 100 0 0" Width="60">Sign Up</Button>

        </StackPanel>
        
    </Grid>
</Window>
