<Window x:Class="JobPortal.EmployerHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EmployerHome" Height="400" Width="600" WindowStartupLocation="CenterScreen">
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="9*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.ColumnSpan="2" Background="Black" VerticalAlignment="Center">
            <Label Name="WelcomeText" HorizontalAlignment="Center" Foreground="White"/>
        </StackPanel>

        <Button Width="50" Height="20" HorizontalAlignment="Left" Content="Logout" Click="Logout_Click" FontStyle="Italic"/>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2">
            
            <StackPanel Width="150" >
                <Button Margin="0 30 0 0" Click="Button_Click">View Messages</Button>
                <Button Margin="0 20 0 0" Name="ViewApplications" Click="ViewApplications_Click">View Applications</Button>
                <Button Margin="0 20 0 0" Name="CreateJobListing" Click="CreateJobListing_Click">Create Job Listing</Button>
            </StackPanel>

        </StackPanel>
        
    </Grid>
    
</Window>
