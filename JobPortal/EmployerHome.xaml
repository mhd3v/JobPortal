<Window x:Class="JobPortal.EmployerHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EmployerHome" Height="400" Width="600">
    
    <Grid>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            
            <TextBlock Name="WelcomeText" TextAlignment="Center"></TextBlock>

            <StackPanel Width="150" >
                <Button Margin="0 30 0 0">View Messages</Button>
                <Button Margin="0 20 0 0">View Applications</Button>
                <Button Margin="0 20 0 0" Name="CreateJobListing" Click="CreateJobListing_Click">Create Job Listing</Button>
                <Button Margin="0 20 0 0" Width="50" Name="Logout" Click="Logout_Click">Logout</Button>
            </StackPanel>

        </StackPanel>
        
    </Grid>
    
</Window>
