<Window x:Class="JobPortal.CandidateHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CandidateHome" Height="400" Width="600">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Name="WelcomeText" TextAlignment="Center"></TextBlock>

            <StackPanel Width="150" >
                <Button Margin="0 30 0 0">View Messages</Button>
                <Button Margin="0 20 0 0" Name="ViewJobs" Click="ViewJobs_Click">View Job Listings</Button>
                <Button Margin="0 20 0 0">Edit Profile</Button>
                <Button Margin="0 20 0 0" Width="50" Name="Logout" Click="Logout_Click" >Logout</Button>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
