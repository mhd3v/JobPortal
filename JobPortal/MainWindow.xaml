<Window x:Class="JobPortal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="350" Width="525">
    <Grid>
        
        <StackPanel VerticalAlignment="Center">

         
            <Label>Username</Label>
            <TextBox Name="UserName"></TextBox>
           
            
            <Label>Password</Label>
            <PasswordBox Name="Password"></PasswordBox>
            
            <Button Name="LoginClick" Click="LoginClick_Click">Login</Button>


            <Label>Dont have an account? Signup here</Label>
            <Button Name="SignupClick" Click="SignupClick_Click">SignUp</Button>

        </StackPanel>
        
    </Grid>
</Window>
